<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_flow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ubt.androidlearning.FlowActivity">
    
    <com.ubt.androidlearning.Drawable.FlowLayout
        android:id="@+id/fl_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.ubt.androidlearning.Drawable.ShapedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/little_apple"
            app:shape="round"
            />

        <com.ubt.androidlearning.Drawable.ShapedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/little_apple"
            app:shape="round"
            />


        <com.ubt.androidlearning.Drawable.ShapedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/little_apple"
            app:shape="round"
            />

        <com.ubt.androidlearning.Drawable.ShapedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/little_apple"
            app:shape="round"
            />

        <com.ubt.androidlearning.Drawable.ShapedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/little_apple"
            app:shape="round"
            />
        
    </com.ubt.androidlearning.Drawable.FlowLayout>


    <ImageView
        android:id="@+id/iv_round"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
